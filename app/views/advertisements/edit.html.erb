<% provide(:page_is_form, "edit_advertisement") %>

<% content_for(:head) do %>
    <%= javascript_include_tag "advertisements/index" %>
<% end %>

<% provide(:title, "Edit listing") %> 
<h1 class="page-header">Edit your listing</h1>

<div class="row-fluid">
	
<div class="span6">
  <%= form_for(@advertisement) do |f| %>
	  	
	<div class="row-fluid">
	  	<div class="span8">
		  	<h5>Title</h5>
			<%= f.text_field :title, :maxlength=>'80' %>
		</div>
		<div class="span4">
			<h5>Price</h5>
		  	<%= f.text_field :price %>
		</div>
	</div>
		
	<div>
  			<h5>Categories (separated by commas)</h5>
  			<p class="form-hint">We recommend you use at least one of the following: books, clothes, electronics, events, personals, services, venture gear</p>
		<%= f.autocomplete_field :tag_list, autocomplete_tag_name_advertisements_path, :"data-delimiter" => ', ' %>
	</div>
	
 	<div id="blurb_section">
	  	<h5>Please provide a short description of your item</h5>
	 	<%= f.text_area :content, :class => 'ckeditor' %>
 	</div>	
 	
 	<!--
 	<div class="image-upload-form">
	  	<h5>Please select up to 5 images to display with your advertisement</h5>
	  	
	  	<div class="image-upload-form-wrapper">
	  	<div class="mobile-hint">On a mobile device, click Browse and your phone will offer you to take a picture!</div>
	  	<div class="row-fluid">
			 <%=  f.fields_for :advertisement_images do |builder| %>
				<% if builder.object.new_record? %>
	  				<div class="image-upload">
					<%= builder.file_field  :image, :class => "image-button" %>
					</div>	
				<% end %>
			<% end %>
		</div>
		</div>
 	</div>
 		
 	-->
 	<div class="submit-button"><br>
		<%= f.submit "Update listing", class: "btn btn-small btn-default" %>
	</div>
	<% end %>
	
	</div>
</div>

<script>
$('.ckeditor').ckeditor({
  toolbar = 'Pure'
});
</script>



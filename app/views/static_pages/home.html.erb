<% if user_signed_in? %>
  <div class="row">
    <aside class="span2">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
	<!-- Right partition -->
	<section>
		<div class="span10">
	  		<%= render 'shared/feed' %>
		</div>
	</section>
  </div> 
<% else %>
<section>
  <div class="span4 hero-unit landing_box">
    <h1>Welcome to PENNLIST</h1>
	<div id="subscribers"></div>
    <br>
    <h2>
      Buy sell with confidence from the UPenn Community
    </h2>

	<!-- Login Links -->
    <!-- <%= link_to image_tag("FaceBook_Button_20130504.jpg", alt: "Sign in with Facebook") , user_omniauth_authorize_path(:facebook) %>-->
  </div>
  <div class="span6">
  	<h3 class= "left">Sign up Now!!!!</h3>
  	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  		<%= devise_error_messages! %>
		<div class="form-inline row span6" id="row_fields">
			<div class="span3" id="left_box">
		    	<%= f.label :first_name %>
		    	<%= f.text_field :first_name %>
			</div>
			<div class="span3"  id="right_box">
		    	<%= f.label :last_name %>
		    	<%= f.text_field :last_name %>
			</div>
	   	</div>

    	<%= f.label :email, "UPenn Email Address" %>
    	<%= f.email_field :email, :autofocus => true %>

    	<%= f.label :password %>
    	<%= f.password_field :password %>

    	<%= f.label :password_confirmation, "Please confirm your password" %>
    	<%= f.password_field :password_confirmation %>

    	<%= f.submit "Create my account", class: "btn btn-default btn-primary vert-form-btn" %> 
    	<div class="btn btn-default btn vert-form-btn">
			<%= link_to "Already have an Account? Sign-In", signin_path %>		
		</div>
	<% end %>
	<hr></hr>
	<%= render "devise/shared/links" %>
  </div>
  </section>
<% end %> 

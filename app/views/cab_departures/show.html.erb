
<h1 class="page-header">Relevant Departures</h1>
<div class="row-fluid">
<aside class="span3 sidebar">
	<h2> Your Location</h2>
	<p id="notice"><%= notice %></p>
	<p>
	  <strong>Leaving from</strong>
	  	<!-- <%= @cab_departure.address %><br> -->
		<%= image_tag "http://maps.google.com/maps/api/staticmap?size=350x300&sensor=false&zoom=16&markers=#{@cab_departure.latitude}%2C#{@cab_departure.longitude}" %>
	</p>
	<p>
	  <strong>Willing to walk:</strong>
	  <%= (@cab_departure.location_buffer*8).round(0) %> block<% if @cab_departure.location_buffer*8 > 1 %>s<% end %>
	</p>
	
	<p>
	  <strong>Time:</strong>
	  <%= @cab_departure.get_departure_datetime %>
	</p>
	
	<p>
	  <strong>Able to leave early:</strong>
	  <%= @cab_departure.time_buffer.round(0) %> minutes
	</p>
	
	<%= link_to 'Edit', edit_cab_departure_path(@cab_departure) %> 
</aside>
<section class="span9 cab-content">
	<h2>Other cabs leaving around your time</h2>
	<!-- To be replaced with something better looking than a table -->
	<table class="table-striped">
	  <thead>
	    <tr>
	      <th>Name</th>
	      <th>Willing to walk</th>
	      <th>Time</th>
	      <th>Leave early</th>
	      <th>Distance</th>
	      <th></th>
	      <!--<th></th>-->
	      <th></th>
	    </tr>
	  </thead>
	
	  <tbody>
	    <% @cab_departures.each do |cab_departure| %>
	      <tr>
	        <td><%= cab_departure.user.first_name %></td>
	        <td><%= (cab_departure.location_buffer*8).round(0) %> block<% if cab_departure.location_buffer*8 > 1 %>s<% end %></td>
	        <td><%= cab_departure.get_departure_datetime %></td>
	        <td><% if cab_departure.time_buffer>0 %>-<%= cab_departure.time_buffer.round(0) %> min<% else %>-<% end %></td>
	        <td><%= cab_departure.distance.round(2) %> miles </td>
	        <!--<td><%= link_to 'Show', cab_departure, :class=>"btn btn-small btn-warning" %></td>-->
	        <td><%= link_to 'Join', cab_departure_join_path(@cab_departure.id, :joinee => cab_departure.id), :class=>"btn btn-small btn-warning", title: "Join" %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
	
</section>
</div>

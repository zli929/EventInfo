<% provide(:title, 'Sign up') %>
<h1 class="page-header">Penn email address</h1>

<div class="row">
  <div class="span6 user-profile-form">
	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  		<%= devise_error_messages! %>
  		<%= f.hidden_field :first_name, :value => @first_name %>
  		<%= f.hidden_field :last_name, :value => @last_name %>
  		<%= f.hidden_field :facebookuid, :value => @facebookuid %>
		<%= f.hidden_field :password, :value => @password %>
		<%= f.hidden_field :password_confirmation, :value => @password %>

		<div class="user-profile-form-row">
    	<%= f.label :email, "To ensure to you are a part of the Penn community, please enter your Penn email address" %>
    	<%= f.email_field :email, :autofocus => true %>
    	</div>

		<div class="submit-button">
    		<%= f.submit "Create my account", class: "btn btn-default" %>
    	</div> 
	<% end %>
	
	<hr></hr>
  </div>
</div>
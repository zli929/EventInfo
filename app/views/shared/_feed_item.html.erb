<div class='feed_item hero-unit span10' id="<%= feed_item.id %>">
	<div class="feed_picture span2 ">
		<% if feed_item.advertisement_images.empty? %>
			<%= gravatar_for current_user, size: 60 %>
		<% else %>	
			<%= render :partial => 'shared/feed_picture', locals: {:partial_advertisement_image => feed_item.advertisement_images.first, :partial_size => :thumb} %>
		<% end %>
	</div>
	<div class= "feed_title span7 right">
	    <span class="ad_title"><h4>
	      <%= link_to feed_item.title, feed_item %></h4>
	    </span>
	    <span class="timestamp">
	     Updated <%= time_ago_in_words(feed_item.updated_at) %> ago.
	    </span>
	  	<% if current_user?(feed_item.user) %>
	    	<%= link_to "delete", feed_item, method: :delete,
	                                    	data: { confirm: "You sure?" },
	                                     	title: feed_item.content %>
	  	<% end %>
	</div>
	<div class="span1 feed_price">
		<h4>
		<% if feed_item.price == -1 %>	
			N/A
		<% else %>	
			<%= feed_item.price %>
		<% end %>	
		</h4>
	</div>
</div>
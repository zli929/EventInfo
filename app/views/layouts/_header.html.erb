<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">

      <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
      <div class="pull-left collapsed-navbar-mobile">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      </div>
      
      <div class= "logo pull-left">
      <!--<%= link_to "PENNLIST", root_path, id: "logo" %>-->
      <a href="/"><img src="<%= image_path('pennlist-logo-main.png') %>"></a>
      <br></br>
      </div>
      
      <% if user_signed_in? %>
      <div class="plus-sell-button pull-right hidden-desktop">
      	<%= link_to "+Add", new_advertisement_path, :class => "btn btn-danger" %>
      </div>
      <% end %>
      
      <div class="nav-collapse collapse">
      <nav role="navigation">
        <ul class="nav pull-right">
          <li><%= link_to "Home", root_path %></li>
          <!--<li><%= link_to "Help", help_path %></li>-->
          <% if user_signed_in? %>
            <li class="dropdown">
              <a href="#" title class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.name %> <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Settings", edit_user_registration_path %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
            <li class="sell-button"><%= link_to "Create listing", new_advertisement_path %></li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
      </div>
    </div>
  </div>
</header>